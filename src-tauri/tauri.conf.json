{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Idea Checklist",
  "version": "1.0.0",
  "identifier": "com.arsentech.idea-checklist",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Idea Checklist",
        "width": 600,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "compression": "zlib",
        "installMode": "currentUser",
        "sidebarImage": "installer/sidebar-image.bmp",
        "headerImage": "installer/header-image.bmp",
        "installerIcon": "installer/installer-icon.ico"
      }
    }
  }
}
